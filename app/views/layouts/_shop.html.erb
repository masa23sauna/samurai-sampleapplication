<div class="d-flex justify-content-between mb-4">
  <div>
    <h1><%= @shop.name %></h1>
    <div class="mt-5">
      <a><i class="bi bi-bookmark-heart-fill" style="font-size: 1.75rem; color: #f08080;"></i><span class="ms-2">◎◎件</span></a>
    </div>
  </div>
  <div class="align-self-end">
    <div>
      <div class="card card-body d-flex flex-row">
        <button class="btn btn-outline-primary mx-1" style="width: 115px;">
          <i class="bi bi-link"></i><span class="ms-1">共有</span>
        </button>
        <button class="btn btn-outline-danger mx-1" style="width: 115px;">
          <i class="bi bi-bookmark-heart"></i><span class="ms-1">お気に入り</span>
        </button>
      </div>
    </div>
  </div>
</div>

<div class="btn-group btn-group-lg text-center" role="group" aria-label="お店メニューのページボタン" style="width: 100%; height: 75px;">
  <%= link_to "トップ", companies_shop_path(@shop), class: "btn btn-outline-dark fs-2 rounded-0", style: "text-decoration: none;" %>
  <%= link_to "メニュー", companies_shop_menus_path(@shop), class: "btn btn-outline-dark fs-2 rounded-0", style: "text-decoration: none;" %>
  <%= link_to "写真", companies_shop_images_path(@shop), class: "btn btn-outline-dark fs-2 rounded-0", style: "text-decoration: none;" %>
</div>

<ul class="list-group float-end mt-2" style="min-width: 300px; width: 25%;">
  <li class="list-group-item text-center">
    <h3>店舗詳細</h3>
  </li>
  <li class="list-group-item">
    <h4 class="text-center border-bottom">店名</h4>
    <p><%= @shop.name %></p>
  </li>
  <li class="list-group-item">
    <h5 class="text-center border-bottom"></h5>
    <p><%= @category.name %></p>
  </li>
  <li class="list-group-item">
    <h5 class="text-center border-bottom">電話番号</h5>
    <p><%= @shop.telephone %></p>
  </li>
  <li class="list-group-item">
    <h5 class="text-center border-bottom">住所</h5>
    <p><%= @area.name %><%= @shop.city %></p>
    <p><%= @shop.address %></p>
  </li>
  <li class="list-group-item">
    地図
  </li>
  <li class="list-group-item">
    <h5 class="text-center border-bottom">営業時間</h5>
    <p><%= @shop.business_hours %></p>
  </li>
</ul>