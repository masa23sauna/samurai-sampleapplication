<div class="d-flex justify-content-between mb-4">
  <div>
    <h1><%= @shop.name %></h1>
    <div class="mt-5">
      <a><i class="bi bi-bookmark-heart-fill me-2" style="font-size: 1.75rem; color: #f08080;"></i><%= @shop.favorites.count %>件</a>
    </div>
  </div>
  <div class="align-self-end">
    <div>
      <div class="card card-body d-flex flex-row">
        <%= link_to "編集", edit_companies_shop_path(@shop), class:"btn btn-outline-primary btn-lg" %>
      </div>
    </div>
  </div>
</div>

<div class="btn-group btn-group-lg text-center" role="group" aria-label="お店メニューのページボタン" style="width: 100%; height: 75px;">
  <%= link_to "トップ", companies_shop_path(@shop), class: "btn btn-outline-warning fs-2 rounded-0", style: "text-decoration: none;" %>
  <%= link_to "メニュー", companies_shop_menus_path(@shop), class: "btn btn-outline-warning fs-2 rounded-0", style: "text-decoration: none;" %>
  <%= link_to "写真", companies_shop_images_path(@shop), class: "btn btn-outline-warning fs-2 rounded-0", style: "text-decoration: none;" %>
</div>
